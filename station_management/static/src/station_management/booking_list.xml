<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="station_management.booking_list" owl="1">
        <div class="container mt-3">
            <h1>Station Booking</h1>
            <div class="row justify-content-end mb-3">
                <div class=" col-lg-3">
                    <input t-ref="search-input" type="text" placeholder="Search..." t-on-keyup="searchBooking"/>
                </div>
                <div class="col-lg-1 me-2">
                    <button class="btn-primary" t-on-click="searchBooking">Search</button>
                </div>

            </div>
        </div>
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Car</th>
                        <th scope="col">Station</th>
                        <th scope="col">Booking Date</th>
                        <th scope="col">State</th>
                    </tr>
                </thead>
                <tbody class="scrollVertical">
                    <tr t-foreach="this.state.BookingList" t-as="booking" t-key="booking_index">
                        <td>#</td>

                        <td t-esc="booking.name"/>
                        <td t-esc="booking.customer[1]"/>
                        <td t-esc="booking.car_id[1]"/>
                        <td t-esc="booking.station_id[1]"/>
                        <td t-esc="booking.booking_date"/>
                        <td t-esc="booking.state"/>
<!--                        <td>-->
<!--                            <button class="btn btn-primary" t-on-click="(e)=> this.changeState(e,booking)"-->
<!--                                    title="reschedule">Reschedule</button>-->
<!--                        </td>-->
                        <td>
                            <button class="btn btn-danger" t-on-click="(e)=> this.deleteBooking(booking)">Delete</button>
                        </td>

                    </tr>

                </tbody>
            </table>
        </div>
    </t>
</templates>